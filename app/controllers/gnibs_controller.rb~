class GnibsController < ApplicationController
  before_filter :signed_in_user

  def create
      @gnib = current_user.gnibs.build(params[:gnib])
      @gnib.image = params[:image]
      if @gnib.save
	flash[:success] = "gnib posted"
        redirect_to "/users/#{@user.name}"
       else
       redirect_to "/users/#{@user.name}"
      end
  end

  def destroy
  end
end
