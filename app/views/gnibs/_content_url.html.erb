<% count = 0 %>
<% if @is_error %>
  <div style="color: red; background: cyan; width: 100%; height: 100%">
    Sorry, an error has occurred
    <br/>
    <%= @error_msg %>
  </div>
<%else%>
  <% @image_sources.each do |source| %>
    <input type="radio" name="url" value="<%=@urls[count]%>">
    <img id="content_url_image<%= count %>"
         src = "data:image/png;base64,<%=source%>"
         style="cursor: pointer; margin-bottom: 5px"
         width="100%" data-image-url="<%=@urls[count]%>"/>
    </input>
    <% count = count +1 %>
  <% end%>
<% end %>
