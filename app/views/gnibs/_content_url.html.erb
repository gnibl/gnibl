<% count = 0 %>
<% if @is_error %>
  <div style="color: red; background: cyan; width: 100%; height: 100%">
    Sorry, an error has occurred
    <br/>
    <%= @error_msg %>
  </div>
<%else%>
  <div id="content_url_images_panel" class="carousel slide content_url"
       style="width: 100%; background: transparent; position: relative">
    <div id="content_url_images_inner_panel" class="carousel-inner">
      <% @image_sources.each do |source| %>
        <div align="center" id="content_url_image<%= count %>" class="<% if count==0 %>active <% end %>item content_url"
             data-image-url="<%=@urls[count]%>">
          <img id="content_url_image<%= count %>"
               src = "data:image/png;base64,<%=source%>"
               class="content-url-image"
               style="cursor: pointer; margin-bottom: 5px;"
               width="100%" data-image-url="<%=@urls[count]%>"
               title="Click on image to select the image"
               onclick="onImageClicked('content_url_image<%= count %>');"/>
               <% count = count +1 %>
        </div>
      <% end%>
    </div>
    <a class="carousel-control left new_gnib left_url" href="#content_url_images_panel" data-slide="prev" >‹</a>
    <a class="carousel-control right new_gnib right_url" href="#content_url_images_panel" data-slide="next">›</a>
  </div>
<% end %>
