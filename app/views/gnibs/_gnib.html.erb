<% if(gnib) %>
  <div id="<%=gnib.id%>"
       class="gnib-thumbnail" style="margin-bottom: -1px; padding-bottom: 0px; float: left;">
    <div id="thumbnail-control_<%=gnib.id%>" class="thumbnail-control"
         style="height: 80px; border-top-left-radius: 5px; border-top-right-radius: 5px;">
      <table>
        <tbody>
          <tr>
            <td style="width: 80%; font-size: 20px; border-right: 1px solid #aaaaaa; text-align: center; color: #17aeff; height: 55px">
            </td>
            <td style="text-align: left; vertical-align: middle; width: 8%; border-right: 1px solid #aaaaaa; padding-left: 2px">
              <button title="gnib it!" class="gnib-gnib-button"
                      onclick="return doAjaxSubmit({gnib_id: '<%= gnib.id %>'}, '/gniblings/create');"
                      style="margin: 0px; margin-top: 1px; margin-right: 5px; background-size: 100% 100%"></button>
            </td>
            <td style="width: 12%">
              <div class="gnib-count"
                   style="font-size: 12px; width: 40px; height: 100%; color: white; background: rgba(23, 174, 255, 0.4)"
                   align="center">
                <div id="gnib_count_<%=gnib.id%>" style="width: 100%;" align="center" title="Number of gnibs">
                  <%=gnib.gniblings.count%>
                </div>
              </div>
            </td>
            <td style="text-align: left; width: 80px; min-width: 80px; vertical-align: middle; padding-left: 2px; border-left: 2px solid rgba(200, 200, 200, 0.3)">
              <button title="gnib it!" class="gnib-gnib-button"
                      onclick="return doAjaxSubmit({gnib_id: '<%= gnib.id %>'}, '/gnibs/upvotegnib');"
                      style="position: relative; background: none; height: 60px; min-width: 80px">
                <span id="upvoted_gnibs_<%=gnib.id%>" style="position: absolute; right: 50px; color: cyan; font-size: 12px">
                  <%=  gnib.upvotegnibs.count%>
                </span>
                <span style="position: absolute; right: 10px; top: 0px;  background: url(<%= image_path('arrow_up.png') %>); height: 60px; width: 50px; margin: 0px; margin-top: 1px; margin-right: 5px; background-size: 100% 100%"></span>
                <span style="position: absolute; right: 5px; color: cyan; font-size: 20px">Up</span>
              </button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <button class="gnib" style="background:transparent; border: 0px none; margin-top: 0px; border-radius: 0px" data-gnib-id="<%=gnib.id%>"
            onclick="doAjaxSubmit({gnib_id: '<%= gnib.id %>'}, '/gnibs/retcomment');
                            return false;">
              <% if gnib.image.url %>
                <%= image_tag(image_path(gnib.image.url), :class => 'gnib', :id=>"gnib_#{gnib.id}", :style=>"border-radius: 0px; margin-top: 0px")%>
              <% else %>
                <%= image_tag(image_path(gnib.imageurl), :class => 'gnib', :id=>"gnib_#{gnib.id}", :style=>"border-radius: 0px; margin-top: 0px")%>
              <% end %>
    </button>
    <div  class="thumbnail-view" style="overflow: hidden; bottom: 0px; border-top-left-radius: 10px; border-top-right-radius: 10px; display: block; height: auto">
      <div style="color: #17aeff; font-size: 15px; font-weight: bold; height: 30px; padding-left: 5px;">
        <div style="margin-top: 20px">
          <a href="/users/<%=gnib.user.html_safe_username%>"
             title = "<%= gnib.title%>"
             style="color: #17aeff;"><%=gnib.short_title%></a>
        </div>
      </div>
      <div id="thumbnail-view_<%=gnib.id%>"
           style="width: 100%; display: none; margin: auto; border-top: 2px solid white;  padding-top: 4px !important">
        <div id="thumbnail-desc_<%=gnib.id%>" class="thumbnail-desc" style="width: 40%; float: left; margin-bottom: 10px;">
          <%=image_tag(image_path(gnib.user.avatar_url), :class=>"thumbnail-user-profile")%>
        </div>
        <div id="thumbnail-desc-msg_<%=gnib.id%>" class="thumbnail-msg"
             style="max-width: 50%; left: 48%; top: 32%; position: absolute; text-align: left; margin-bottom: 10px; overflow: hidden; ">
          <p><%= gnib.parsed_description%></p>
          <% if gnib.link %>
            <p><a target="_blank" href="<%= gnib.link %>">See what is here?</a></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
                        var speed = 300;
                        var rollbackSpeed = 600;
                        $('#<%= gnib.id %>').hover(function() {
                          $('#thumbnail-view_<%=gnib.id%>').slideDown(speed, function() {
                            $(this).show();
                          });
                          $('#thumbnail-control_<%=gnib.id%>').slideDown(speed, function() {
                            $(this).show();
                          });
                        },
                                function() {
                                  $('#thumbnail-control_<%=gnib.id%>').slideUp(rollbackSpeed, function() {
                                    $(this).hide();
                                  });
                                  $('#thumbnail-view_<%=gnib.id%>').slideUp(rollbackSpeed, function() {
                                    $(this).hide();
                                  });
                                });
  </script>
<% end %>
