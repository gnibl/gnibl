 <% if(gnib.image && gnib.image.url) %> 
  <button class="gnib-thumbnail" title="View this gnibl" style="margin-bottom: 5px">
    <%= image_tag(image_path(gnib.image.url), :class => 'gnib')%>
    <div style="background: #dddddd; opacity: 0.9; max-height: 40px; height: 40px; overflow: hidden">
      <%= gnib.description%>
    </div>
  </button>
<% end %>
