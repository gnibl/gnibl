<li>
  <% if notification.gnib %>
    <div style="width: 100%; height: 100px; border-bottom: 2px solid #ddd"
         onclick="doAjaxSubmit({gnib_id: '<%= notification.gnib.id %>'}, '/gnibs/retcomment');">
      <div id="thumbnail-desc:<%=notification.id%>" class="thumbnail-desc" style="float: left; margin: 2px">
        <%=image_tag(image_path(notification.gnib.user.avatar_url), :class=>"thumbnail-user-profile")%>
      </div>
      <div style="float: left; margin: 2px;"><%= notification.message %></div>
    </div>
  <% end %>
</li>
