<% if comment %>
  <div class="gnib_comment_737373737" id="comment_<%= comment.id %>" style="display: none">
    <%=image_tag(image_path(comment.user.avatar_url), :style=>"margin-bottom: 10px; width: 50px; height: 50px; border-radius: 100px; float: left; margin-left: 30px;margin-top: 5px")%>
    <div style="float:left; margin-left: 1%; margin-top: 5px; width: 65%; text-align: left;">
      <span style="color: #17aeff"><%= comment.user.name %></span>
      <br/>
      <div style="background: rgba(100, 100, 100, 0.6); width: 100%; height: 25px; color: black; border-radius: 5px;padding-left: 5px">
        <%= comment.description%>
      </div>
    </div>
  </div>
<% end %>