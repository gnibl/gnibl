
<% if comment %>
  <div id="newGnibComment_<%= comment.id %>" class="new-gnib-comment">
    <div class="new-comment-profile" style="background: url(<%=image_path(comment.user.avatar_url)%>); background-size: 100% 100%"></div>
    <div class="new-comment-comment">
      <div id="comment-header-panel_<%=comment.id%>" style="color: #17aeff; height: 20px">
        <%= render :partial => "shared/gnib_comment_header", :locals => {:comment => comment} %>
      </div>
      <div id="gnib-comment-panel_<%= comment.id %>" style="background: rgba(0, 0, 0, 0.5); width: 100%; height: 60px; border-radius: 10px">
        <table style="height: 100%">
          <tbody>
            <tr>
              <td style="width: 100%; vertical-align: middle">
                <%= comment.description%>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>