<div style="float: left">
  <a href="/users/<%=comment.user.html_safe_username%>" style="color: #17aeff;"><%=comment.user.name%></a>
</div>
<div class="line" style="float: left; height: 16px; margin-left: 10px; margin-top: 2px; opacity: 0.4"></div>
<div style="float: left; height: 16px; margin-left: 10px;">
<% if current_user %>
  <button id="gnib-like" class="gnib-like" title="Do you think this comment is great?"
          onclick="return doAjaxSubmit({comment_id: '<%= comment.id %>', gnib_id: '<%= comment.gnib_id %>'}, '/gnibs/<%= current_user.html_safe_username %>/upvotecomment');">
  </button>
<% end %>
  <span style="color: white; font-size: 11px">(<%= comment.votes %>)</span>
</div>
<div class="line" style="float: left; height: 16px; margin-left: 10px; margin-top: 2px; opacity: 0.4"></div>
<div style="float: left; height: 16px; margin-left: 10px; color: white">
  <%= comment.posted_date %>
</div>
