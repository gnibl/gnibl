<%= form_for(:session, :url => sessions_path) do |f| %>
  <div align="center" style="width: 100%">
    <%= f.text_field :email, :class => 'input-option', :placeholder => 'Enter your email', :style=>"text-align: center; border: 0px none; width: 50%" %>
    <br/>
    <br/>
    <%= f.password_field :password, :class => 'input-option', :placeholder => 'Enter your password', :style=>"text-align: center; border: 0px none; width: 50%" %>
    <br/>
    <br/>
    <div align="center" style="width: 100%" class="actions">
      <%= f.submit :value => 'Login', :class=>"login-button"%>
    </div>
    <div style="display: none">
      <%= link_to(image_tag(image_path('facebook.jpg'), :class => 'social-image-option'),"/auth/facebook")%>
      <%= image_tag(image_path('twitter.jpg'), :class => 'social-image-option')%>
    </div>
  </div>
<% end %>
