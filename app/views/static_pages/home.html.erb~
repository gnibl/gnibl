  $('.buttongnib').toggle(
      function(){
          $(".slidingnav").slideDown();
           $(this).removeClass("plus");
         $(this).removeClass("minus");
      },
      function(){
          $(".slidingnav").slideUp();
        $(this).removeClass("plus");
         $(this).removeClass("minus");
      }
  );
});
