
<div align="center" style="width: 100%; padding: 10px; padding-top: 0px">
  <table style="background: rgba(23, 174, 255, 0.3); bottom: 0px; width: 40%; margin-top: 10px; border-radius: 5px; min-width: 490px">
    <tbody>
      <tr style="background: transparent;">
        <td class="prof-not-bd left-radius" <% if request.path == "/users/#{current_user.html_safe_username}/feed" %> style="background: rgba(0, 0, 0, 0.2)" <% end %> >
          <a href="/users/<%=current_user.html_safe_username%>/feed">Gnibfeeds(<%=current_user.feed.count%>)</a>
        </td>
        <td class="prof-not-bd" style="max-width: 60px"><div class="line"></div></td>
        <td class="prof-not-bd" <% if request.path == "/users/#{current_user.html_safe_username}/notifications" %> style="background: rgba(0, 0, 0, 0.2);" <% end %>>
          <div class="dropdown" id="notification_menu">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#notification_menu">
              <%= render :partial=>"notifications/notification_header", :locals=>{:notifications_count => @notifications_count} %>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel" style="top: 27px">
              <% if @notifications %>
                <% index = 0 %>
                <% @notifications.each do |notification| %>
                  <li style="height: 100px;<% if index > 0 %> border-top: 5px solid #ddd;<% end %>cursor: pointer; width: 350px"
                    onclick="doAjaxSubmit({gnib_id: '<%= notification.gnib.id %>'}, '/gnibs/retcomment');
                        doAjaxSubmit({notification_id: '<%=notification.id%>'}, '/users/readnotifications');"
                    class="notification-overlay" data-notification-id="<%=notification.id%>">
                      <% index += 1 %>
                    <div style="height: 100px; position: relative; width: 100%">
                      <div id="thumbnail-desc:<%=notification.id%>" class="thumbnail-desc"
                           style="margin: 0px; position: absolute; top:0px; left: 0px">
                             <% if notification.gnib.image.url %>
                               <%=image_tag(image_path(notification.gnib.image.url), :class=>"notification-profile")%>
                             <% else %>
                               <%=image_tag(image_path(notification.gnib.imageurl), :class=>"notification-profile")%>
                             <% end %>
                      </div>
                      <div style="color: black; text-align: left; position: absolute; left: 104px; top: 0px; max-height: 100px; overflow-y: hidden">
                        <div style="min-width: 150px">
                          <%= notification.parsed_message %>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </td>
        <td class="prof-not-bd" style="max-width: 60px"><div class="line"></div></td>
        <td class="prof-not-bd" <% if request.path == "/users/#{@user.html_safe_username}/following" %> style="background: rgba(0, 0, 0, 0.2)" <% end %>>
          <a  href="/users/<%=@user.html_safe_username%>/following">Gniblers</a>
        </td>
        <td class="prof-not-bd" style="max-width: 60px"><div class="line"></div></td>
        <td class="prof-not-bd" <% if request.path == "/users/#{@user.html_safe_username}/gnibblings" %> style="background: rgba(0, 0, 0, 0.2)" <% end %>>
          <a id="gnibler_count" href="/users/<%=@user.html_safe_username%>/gnibblings">
            Gnibblings(<%=@user.followed_users.count%>)
          </a>
        </td>
        <td class="prof-not-bd" style="max-width: 60px"><div class="line"></div></td>
        <td class="prof-not-bd right-radius" <% if request.path == "/users/#{current_user.html_safe_username}" %> style="background: rgba(0, 0, 0, 0.2)" <% end %>>
          <a href="/users/<%=current_user.html_safe_username%>">
            My gnibs(<%=current_user.redefgnibs.count%>)
          </a>
        </td>
      </tr>
    </tbody>
  </table>
</div>