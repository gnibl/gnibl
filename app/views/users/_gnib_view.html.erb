<%= render "/users/header" %>
<div style="position: relative; margin-top: 25px; background: rgba(0, 0, 0, 0.5); height: 100%;">
  <div style="width:100%;">
    <%= render "/users/gnib_header" %>
    <div align="center" style="width: 100%;">
      <style type="text/css">
        .carousel-count{
          background: rgba(200, 200, 200, 0.6);
          width: 20px;
          height: 20px;
          border-radius: 20px;
          border: 2px solid rgba(255, 255, 255, 0.7);
          font-size: 10px;
          display: table-cell;
          position: relative;
          vertical-align: middle;
          cursor: pointer;
        }
        .carousel-count.active{
          background: rgba(0, 0, 0, 0.2);
          cursor: default;
        }
        .carousel-control{
          top: 90% !important;
          z-index: 23000;
          position: fixed;
        }
      </style>
      <% 0.upto(@page_count) do |c| %>
        <div id="carousel-count_<%=c%>"
             class="carousel-count <% if c==0 %>active<% end %> >"
             style="position: inherit"
             data-count="<%=c%>">
               <%=c%>
        </div>
      <% end %>
    </div>
    <div id="gnib_main_panel" class="carousel slide" style="width: 100%; background: transparent; position: relative">
      <div id="gnib_panel_holder" class="carousel-inner" style="width: 100%; background: transparent; vertical-align: top;display:block;  overflow-y: hidden; overflow-x: scroll; white-space: nowrap; max-height: 260px ; height: auto !important; height: 260px; ">
        <% 0.upto(@page_count) do |c| %>
          <div id="gnib_panel_<%= c %>" class="<% if c==0 %>active <% end %>item" data-slide-number="<%=c%>">
            <%if c==0%>
              <% unless @gnibs.nil? %>
                <%= render :partial=>"gnibs/new_gnib" %>
              <% end %>
              <% if @gnibs.any? %>
                <%= render @gnibs %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control left" href="#gnib_main_panel" data-slide="prev" >‹</a>
      <a class="carousel-control right" href="#gnib_main_panel" data-slide="next" >›</a>
    </div>
  </div>
</div>
