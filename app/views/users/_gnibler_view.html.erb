<style type="text/css">
  #profile-image .gnibl-button {
    background: url(<%=image_path(@user.avatar_url)%>);
    background-size: 100% 100%;
  }
</style>
<%= render "/users/header" %>
<div style="width:100%; margin-top: 10px; background: rgba(0, 0, 0, 0.5); padding-bottom: 30px">
  <%= render "/users/gnib_header" %>
  <div align="center" style="width: 100%;">
    <style type="text/css">
      .carousel-count{
        background: rgba(200, 200, 200, 0.6);
        width: 20px;
        height: 20px;
        border-radius: 20px;
        border: 2px solid rgba(255, 255, 255, 0.7);
        font-size: 10px;
        display: table-cell;
        position: relative;
        vertical-align: middle;
        cursor: pointer;
      }
      .carousel-count.active{
        background: rgba(0, 0, 0, 0.2);
        cursor: default;
      }
    </style>
    <% 0.upto(@page_count) do |c| %>
      <div id="carousel-count_<%=c%>"
           class="carousel-count <% if c==0 %>active<% end %> >"
           style="position: inherit"
           data-count="<%=c%>">
             <%=c%>
      </div>
    <% end %>
  </div>
  <div id="gnib_main_panel" class="carousel slide" style="width: 100%; background: transparent; position: relative">
    <div id="gnib_panel_holder" class="carousel-inner" style="width: 100%; background: transparent; display: table-cell; vertical-align: top">
      <% 0.upto(@page_count) do |c| %>
        <div id="gnib_panel_<%= c %>" class="<% if c==0 %>active <% end %>item" data-slide-number="<%=c%>">
          <%if c==0%>
            <%= render @users%>
          <% end %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control left" href="#gnib_main_panel" data-slide="prev" style="z-index: 4499000;">‹</a>
    <a class="carousel-control right" href="#gnib_main_panel" data-slide="next" style="z-index: 23000">›</a>
  </div>
</div>
