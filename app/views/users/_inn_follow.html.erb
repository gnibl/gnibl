<style type="text/css">
  #ungnibble.btn-primary:hover,
  #ungnibble.btn-primary:focus,
  #ungnibble.btn-primary:active,
  #ungnibble.btn-primary.active,
  #ungnibble.btn-primary.disabled, #ungnibble.btn-primary[disabled]{
    background: #ff0000 !important;
  }
  #ungnibble.btn-primary{
    background: #ff0000 !important;
  }
  #gnibble.btn-primary:hover,
  #gnibble.btn-primary:focus,
  #gnibble.btn-primary:active,
  #gnibble.btn-primary.active,
  #gnibble.btn-primary.disabled,
  #gnibble.btn-primary[disabled]{
    background: #11ff11 !important;
    color: #444;
  }
  #gnibble.btn-primary{
    background: #11ff11 !important;
    color: #444;
  }
</style>
<% if current_user.following?(user) %>
<button id="ungnibble" class="btn btn-large btn-primary" style ="font-size: 14px; padding: 5px 10px; min-width: 100px;"
          onclick="return doAjaxSubmit({rel_id: <%= current_user.relationships.find_by_followed_id(user).id %>}, '/relationships/unfollow');">
    Ungnibble
  </button>
<% else %>
  <button id="gnibble" class="btn btn-large btn-primary" style ="font-size: 14px; padding: 5px 10px; min-width: 100px;"
          onclick="return doAjaxSubmit({followed_id: <%= user.id %>}, '/relationships/follow');">
    Gnibble
  </button>
<% end %>
