<% if(user.avatar_url ) %>
  <div id="user_thumbnail_<%=user.id%>"
       class="gnib-thumbnail" style="margin-bottom: 5px;">
    <script type="text/javascript">
      $('#user_thumbnail_<%= user.id %>').hover(function() {
        $('#thumbnail-control_<%= user.id%>').slideDown(1200, function() {
          $(this).show();
        });
        $('#thumbnail-view_<%= user.id%>').slideDown(1200, function() {
          $(this).show();
        });
      },
              function() {
                $('#thumbnail-control_<%=  user.id%>').slideUp(1200, function() {
                  $(this).hide();
                });
                $('#thumbnail-view_<%=  user.id%>').slideUp(1200, function() {
                  $(this).hide();
                });
              });
    </script>
    <div id="thumbnail-control_<%=user.id%>" class="thumbnail-control">
      <div class="gnib-count" style="font-size: 20px;"  align="center">
        <div id="gnib_count_<%=user.id%>" title="My Gnibs!"
             style="width: 100%; height:100%; padding-top:5px; cursor: pointer" align="center">
          <%=user.gniblings.count%>
        </div>
      </div>
      <% if (!current_user?user) %>
        <div id="follow-option_<%= user.id %>" class="gnib-gnib-button" style="height: 40px; background: none; padding-top: 5px; margin-right: 20px">
          <%= render :partial => "users/inn_follow", :locals => {:user => user} %>
        </div>
      <%end%>
    </div>
    <%= image_tag(image_path(user.avatar_url), :class => 'gnib', :id=>"gnib_#{user.id}", :onclick=>"location.href = '/users/#{user.username}'")%>
    <div id="thumbnail-view_<%=user.id%>" class="thumbnail-view" style="overflow: hidden; min-height: 60px; ">
      <div id="thumbnail-desc_<%=user.id%>" class="thumbnail-desc" style="width: 100%">
        <span style="color: #17aeff; font-size: 16px; font-weight: bold"><%=user.name%></span>
        <br/>
        <div id="thumbnail-desc-msg_<%=user.id%>" class="thumbnail-msg" style="width: 100%">
          <%= user.description%>
        </div>
      </div>
    </div>
  </div>
<% end %>
