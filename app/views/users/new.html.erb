<style type="text/css">
  html, body{
    background: url(<%= image_path('grass_dark_wallpaper-HD.jpg')%>);
  }
</style>
<div style="margin: auto; position: relative; height: 100%; width: 100%">
  <div id="login-main-panel" align="center" class="login-main-panel" style="margin: auto; height: auto;">
    <div id="login-main" align="center" class="login-main"
         style="position: relative; background: rgba(255, 255, 255, 0.8); z-index: 34;">
      <div align="center" style="width: 100%; height: 28%; min-height: 140px; margin-bottom: 2%">
        <%= image_tag(image_path('FINALE-FINALE!!-_03.png'), :class => 'gnibl-logo', :style=>"width: 80px; height: 80px")%>
        <br/>
        <%= image_tag(image_path('gnibl-text.png'), :style => 'width: 100px; height: 50px')%>
        <br/>
      </div>
      <div align="center" style="width: 100%; height: 68%; margin-top: 2%">
        <%= render 'new_user' %>
      </div>
    </div>
    <div class="gnibl-login-banner">
      <div style="width: 100%; height: 25%; top: 4%; position: absolute; background: transparent; text-align: left; margin-left: 30%; font-size: 30px">
        Already Registered?
        <br/>
        <br/>
        <%= link_to("signin!","/", :class => 'login-button', :style=>"margin-left: 10%;")%>
<br/>

      </div>
      <div style="width: 100%; height: 25%; top: 40%; position: absolute; background: transparent; text-align: left; margin-left: 40%; font-size: 30px">
        Discover
        <br/>
        <br/>
        <span  style="margin-left: 10%;">More</span>
        <br/>
        <br/>
        <span  style="margin-left: 2%;">in a fun way</span>
      </div>
      <div style="width: 100%; height: 25%; top: 75%; position: absolute; background: transparent; text-align: left; margin-left: 25%; font-size: 30px">
        <span  style="margin-left: 10%;">Gnib = Like</span>
        <br/>
        <br/>
        <span  style="margin-left: 10%;">Gnib = Approval</span>
        <br/>
        <br/>
        <span  style="margin-left: 10%;">Gnib = :)</span>
      </div>
    </div>
    <div class="round" style="width: 440px; position: absolute; top: 0px; right: 0px; height: 80px; display: none">
      <span>New to gnibl?</span>
    </div>
  </div>
</div>
